<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_article_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical">

    <SearchView
        android:id="@+id/search_book_searchview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dddddddd"
        android:queryHint="作者、作名を入力してください"
        android:textSize="15sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/search_article_unfinished_book_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="更新" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/search_article_unfinished_book_image_button1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <TextView
                        android:id="@+id/search_article_unfinished_book_textview1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/search_article_unfinished_book_image_button2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <TextView
                        android:id="@+id/search_article_unfinished_book_textview2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/search_article_unfinished_book_image_button3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <TextView
                        android:id="@+id/search_article_unfinished_book_textview3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/search_article_finished_book_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="完本" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/search_article_finished_book_image_button1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <TextView
                        android:id="@+id/search_article_finished_book_textview1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/search_article_finished_book_image_button2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <TextView
                        android:id="@+id/search_article_finished_book_textview2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/search_article_finished_book_image_button3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6" />

                    <TextView
                        android:id="@+id/search_article_finished_book_textview3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="最新" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>