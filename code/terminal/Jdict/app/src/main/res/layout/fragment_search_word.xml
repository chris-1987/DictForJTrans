<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_word_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_word_bg">


    <LinearLayout
        android:layout_width="150pt"
        android:layout_height="30pt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="#50000000">

        <ImageView
            android:id="@+id/search_word_image"
            android:layout_width="0dp"
            android:layout_height="30pt"
            android:layout_weight="1"
            android:src="@drawable/search_word_icon" />

        <Button
            android:id="@+id/search_word_button"
            android:layout_width="0dp"
            android:layout_height="30pt"
            android:layout_weight="4"
            android:background="#50000000"
            android:hint="请输入查询内容"
            android:textColorHint="#FFCD8C95"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>